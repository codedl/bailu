<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="ch4"
        android:id="@+id/ch4_btn"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/ch4_btn"
        app:layout_constraintTop_toTopOf="parent"
        android:text="ch5"
        android:id="@+id/ch5_btn"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/ch5_btn"
        app:layout_constraintTop_toTopOf="parent"
        android:text="ch6"
        android:id="@+id/ch6_btn"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/ch6_btn"
        app:layout_constraintTop_toTopOf="parent"
        android:text="ch7"
        android:id="@+id/ch7_btn"/>
</androidx.constraintlayout.widget.ConstraintLayout>